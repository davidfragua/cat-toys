<div>
  <form action="/toy/{{oldToy._id}}/edit" method="POST" enctype="multipart/form-data">
    <label for="name">Nombre:</label>
    <input type="text" name="name" value="{{oldToy.name}}" />
    <br />
    <label for="description">Description:</label>
    <input type="text" name="description" value="{{oldToy.description}}" />
    <br />
    <label for="photo">Photo:</label>
    <input type="file" name="photo" value="{{oldToy.photo}}" />
    <br />
    <label for="status">Status:</label>
    <select name="status">
      <option value="new">New</option>
      <option value="used">Used</option>
      <option value="trash">Trash</option>
    </select>
    <br />
    <button>Confirm changes</button>
  </form>
</div>