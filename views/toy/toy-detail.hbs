<div>
{{#with eachToy}}
<h2>{{name}}</h2>
<p>{{description}}</p>
<img src="{{photo}}" alt="{{name}}">
<p>{{status}}</p>
{{#if ../isUserActive}}
    {{#if ../reserved}}
        <p>Ya tienes un juguete reservado, la siguiente reserva substituir√° a la anterior</p>
    {{/if}}
    {{#if ../reservedButton}}
        <a href="/toy/{{_id}}/reserve"><button>Reserve it</button></a>
    {{else}}
        <a href="/toy/removereserve"><button>Remove Toy</button></a>
    {{/if}}
{{/if}}


<section>
  <div class="container my-5 py-5">
    <div class="row d-flex justify-content-center">
      <div class="col-md-12 col-lg-10">
        <div class="card text-dark">
          <div class="card-body p-4">
            <h4 class="mb-0">Comments</h4>
            <p class="fw-light mb-4 pb-2">Latest Comments by users for this Toy</p>
            {{#each commentToy}}
            <hr class="my-0" />
            <div class="d-flex flex-start">
              <img class="rounded-circle shadow-1-strong me-3"
                src="{{idUser.avatar}}" alt="avatar" width="60"
                height="60" />
              <div>
                <h6 class="fw-bold mb-1">{{idUser.username}}</h6>
                <div class="d-flex align-items-center mb-3">
                  <p class="mb-0">
                    {{lookup ../../objDates this._id }}
                  </p>
                </div>
                <p class="mb-0">
                  {{content}}
                </p>
              </div>
            </div>
          <hr class="my-0" style="height: 10px;" />
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{{/with}} 
{{#if isUserActive}}
<section>
  <div class="container my-5 py-5 text-dark">
    <div class="row d-flex justify-content-left">
      <div class="col-md-10 col-lg-8 col-xl-6">
        <div class="card">
          <div class="card-body p-4">
            <div class="d-flex flex-start w-100">
              <img class="rounded-circle shadow-1-strong me-3"
                src="{{activeUser.avatar}}" alt="avatar" width="65"
                height="65" />
              <div class="w-100">
                <h5>Add a comment</h5>
                <form action="/toy/{{eachToy._id}}/detail" method="POST">
                <div class="form-outline">
                  <textarea class="form-control" id="textAreaExample" rows="4" name="content"></textarea>
                  <label class="form-label" for="textAreaExample">What do you think?</label>
                </div>
                <div class="d-flex justify-content-between mt-3">
                  <button class="btn btn-success">Send</button>
                </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{{/if}}
</div>