<div>

{{#with eachToy}}
<h3>{{name}}</h3>
<p>{{description}}</p>
<img src="{{photo}}" alt="{{name}}">
<p>{{status}}</p>
{{#each comment}}
<p>Comments:</p>
<p>{{content}}</p>
{{/each}}

{{/with}}

<form action="/toy/{{eachToy._id}}/detail" method="POST">

<label for="content">Comentario:</label>
<br>
<textarea rows="4" cols="50"  name="content"></textarea>
<br>
<button>Enviar comentario</button>
</form>

</div>